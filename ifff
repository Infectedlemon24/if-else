{
    int age;
    Console.Write("Введите ваш возвраст: ");
    age = Convert.ToInt32(Console.ReadLine());
    if (age >= 18)
    {
        Console.WriteLine("Добро пожаловать в бар!");
        Console.WriteLine("Что будете пить?");
    }
    else 
    {
        Console.WriteLine("Вы слишком юны");
        Console.WriteLine("Приходите через: " + (age - 18) + "лет.");
    }
}
